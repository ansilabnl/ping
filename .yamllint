---
extends: default

ignore: |
  .tox
  .git
  .github
  docs
  galaxy.yml
  changelogs/

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length:
    max: 132
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: false
